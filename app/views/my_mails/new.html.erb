<div id="wrapper">

        <!-- Sidebar -->
        <%= render 'shared/side_bar' %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <h1> New Email</h1>
                      <div class="col-sm-6">
                      <%= form_for @mail do |f| %>
                        <div class="form-group field">
                          <%= f.label "Receiver" %><br />
                          <%= f.text_field :object_id,class: "form-control" %>
                        </div>
                        <div class="form-group field">
                          <%= f.label :subject %><br />
                          <%= f.text_field :subject,class: "form-control" %>
                        </div>
                        <div class="form-group field">
                          <%= f.label :content %><br />
                          <%= f.text_area :content,class: "form-control" %>
                        </div>
                        <div class="form-group actions">
                        <%= f.submit "Send Mail", class: "btn btn-primary btn-block" %>
                      </div>
                      </div>

                    <% end %>

                    </div>
                    <!-- col-lg-12 -->
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->








